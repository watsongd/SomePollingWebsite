<% if @already_voted %>
  <h5>
    You have already voted, see results here:
    <%= link_to "Results", poll_stats_path(@poll.id), "data-turbolinks": "false" %>
  </h5>
<% end %>
<ul class="collection with-header">
  <li class="collection-header"><h4><%= @poll.title %></h4></li>
  <% @poll.options.each do |option, count| %>
    <li class="collection-item">
      <div class="row">
        <div class="col s10">
          <%= option %>
        </div>
        <div class="col s2">
          <%= button_to "Vote", poll_vote_path(id: @poll.id, option: option, password: @password), class: "btn" %>
        </div>
      </div>
    </li>
  <% end %>
</ul>
<br />
<% if @password %>
  send this link to your friends: <%= "http://localhost:3000/polls/" + @poll.id.to_s + "/?password=" + @password.to_s %>
<% else %>
  send this link to your friends: <%= "http://localhost:3000/polls/" + @poll.id.to_s + "/" %>
<% end %>